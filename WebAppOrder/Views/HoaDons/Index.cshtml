@model IEnumerable<WebAppOrder.Models.HoaDon>

@{
    ViewBag.Title = "Hóa đơn bán hàng";
}

<h2>Danh sách hóa đơn</h2>

<p>
    @Html.ActionLink("Thêm hóa đơn", "Create")
</p>
<table class="table">
    <tr>
        <th>
            Mã hóa đơn
        </th>

        <th>
            Ngày lập hóa đơn
        </th>

        <th>
            Tên khách hàng
        </th>
        <th>
            Tên nhân viên
        </th>

        <th>
            Tổng tiền
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model) {
    <tr>
        <td>
            <a href="@Url.Action("Index", "CTHDs", new { MaHD = item.MaHD })">
                @Html.DisplayFor(modelItem => item.MaHD)
            </a>
        </td>

        <td>
            @Html.DisplayFor(modelItem => item.NgayLapHD)
        </td>

        <td>
            @Html.DisplayFor(modelItem => item.KhachHang.TenKH)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.NhanVien.HoNV)
            @Html.DisplayFor(modelItem => item.NhanVien.TenNV)
        </td>

        <td>
            @Html.DisplayFor(modelItem => item.TongTien)
        </td>
        <td>
            @Html.ActionLink("Sửa", "Edit", new { id = item.MaHD }) |
            @Html.ActionLink("Chi tiết", "Details", new { id = item.MaHD }) |
            @Html.ActionLink("Xóa", "Delete", new { id = item.MaHD })
        </td>
    </tr>
    }

</table>
